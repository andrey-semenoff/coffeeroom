// ====== menu =======
nav.menu
	._container
		ul.menu__list

			each item, key in menu_list

				- var add_class = ""

				if( active == key )
					- add_class = "menu__link_active"

				li.menu__item
					a.menu__link(href=key + ".html" class=add_class title=key) #{item.text}

	.burger
		.burger__bar.burger__bar_top
		.burger__bar.burger__bar_mid
